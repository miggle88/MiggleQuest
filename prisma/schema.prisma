// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Account {
  id           Int      @id @default(autoincrement())
  username     String   @unique @db.VarChar(20)
  displayName  String   @db.VarChar(30)
  emailAddress String   @db.VarChar(100)
  passwordHash String   @db.VarChar(80)
  gold         Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())
  Hero         Hero[]
}

model Hero {
  id            Int       @id @default(autoincrement())
  accountId     Int
  account       Account   @relation(fields: [accountId], references: [id])
  icon          String?   @db.VarChar(100)
  flavorText    String?   @db.VarChar(250)
  characterName String    @db.VarChar(50)
  level         Int       @default(1)
  class         String    @db.VarChar(30)
  experience    Int       @default(0)
  isAlive       Boolean   @default(true)
  strength      Int       @default(1)
  dexterity     Int       @default(1)
  intelligence  Int       @default(1)
  constitution  Int       @default(1)
  hitPoints     Int       @default(10)
  hiredAt       DateTime  @default(now())
  diedAt        DateTime?

  @@index([accountId])
}
